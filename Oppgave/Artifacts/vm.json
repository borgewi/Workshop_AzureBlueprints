{
    "kind": "template",
    "properties": {
        "template": {
            "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
            "contentVersion": "1.0.0.0",
            "parameters": {
                "devEnvNumber": {
                    "type": "string"
                },
                "storageAccountName": {
                    "type": "string"
                },
                "pipName": {
                    "type": "string"
                },
                "vnetName": {
                    "type": "string"
                },
                "networkInterfacesName": {
                    "type": "string"
                },
                "virtualMachineName": {
                    "type": "string"
                },
                "adminUsername": {
                    "type": "string"
                },
                "adminPassword": {
                    "type": "securestring"
                },
                "location": {
                    "type": "string"
                }
            },
            "resources": [
            {    
                "type": "Microsoft.Compute/virtualMachines",
                "apiVersion": "2018-10-01",
                "name": "[parameters('virtualMachineName')]",
                "location": "[parameters('location')]",
                "properties": {
                    "hardwareProfile": {
                        "vmSize": "Standard_B2ms"
                    },
                    "storageProfile": {
                        "imageReference": {
                            "publisher": "microsoftvisualstudio",
                            "offer": "visualstudio2019",
                            "sku": "vs-2019-ent-ws2019",
                            "version": "latest"
                        },
                        "osDisk": {
                            "osType": "Windows",
                            "name": "[concat(parameters('virtualMachineName'), '_OsDisk_1_16bf91455b6f465589f145a9f400054f')]",
                            "createOption": "FromImage",
                            "caching": "ReadWrite",
                            "managedDisk": {
                                "storageAccountType": "Premium_LRS"
                            },
                            "diskSizeGB": 127
                        },
                        "dataDisks": []
                    },
                    "osProfile": {
                        "computerName": "[parameters('virtualMachineName')]",
                        "adminUsername": "[parameters('adminUsername')]",
                        "adminPassword": "[parameters('adminPassword')]",
                        "windowsConfiguration": {
                            "provisionVMAgent": true,
                            "enableAutomaticUpdates": true
                        },
                        "secrets": [],
                        "allowExtensionOperations": true
                    },
                    "networkProfile": {
                        "networkInterfaces": [
                            {
                                "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfacesName'))]"
                            }
                        ]
                    },
                    "diagnosticsProfile": {
                        "bootDiagnostics": {
                            "enabled": true,
                            "storageUri": "[concat('https://', parameters('storageAccountName'), '.blob.core.windows.net/')]"
                        }
                    }
                }
            }
        ]
        },
        "resourceGroup": "BW-Blueprint-Rg",
        "parameters": {
            "storageAccountName": {
                "value": "[parameters('SLV_SAFEST_storageAccountName')]"
            },
            "pipName": {
                "value": "[parameters('SLV_SAFEST_pipName')]"
            },
            "vnetName": {
                "value": "[parameters('SLV_SAFEST_vnetName')]"
            },
            "networkInterfacesName": {
                "value": "[parameters('SLV_SAFEST_networkInterfacesName')]"
            },
            "virtualMachineName": {
                "value": "[parameters('SLV_SAFEST_virtualMachineName')]"
            },
            "adminUsername":{
                "value": "[parameters('SLV_SAFEST_adminUsername')]"
            },
            "adminPassword":{
                "value": "[parameters('SLV_SAFEST_adminPassword')]"
            },
            "location": {
                "value": "[parameters('SLV_SAFEST_location')]"
            }, 
            "devEnvNumber":{ 
                "value": "[parameters('SLV_SAFEST_devEnvNumber')]"
            }
        },
        "dependsOn": [
            "nic",
            "storageaccount",
            "vnet",
            "pip"
        ]
    },
    "type": "Microsoft.Blueprint/blueprints/artifacts"
}